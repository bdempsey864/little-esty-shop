<%= link_to "New Merchant", new_admin_merchant_path, method: :get %>
  <section id='enabled'>
    <h3>Enabled Merchants</h3>
    <ul>
      <% @merchants.enabled_merchants.each do |en_merchant| %>
        <li id="merchant-<%= en_merchant.id %>">
          <%= link_to en_merchant.name, admin_merchant_path(en_merchant.id), method: :get %>
          <%= button_to "Disable", admin_merchant_path(en_merchant.id), params: {status: 'Disabled'}, method: :patch %>
        </li>
      <% end %>
    </ul>
  </section>
  <section id='disabled'>
    <h3>Disabled Merchants</h3>
      <ul>
        <% @merchants.disabled_merchants.each do |dis_merchant| %>
          <li id="merchant-<%= dis_merchant.id %>">
            <%= link_to dis_merchant.name, admin_merchant_path(dis_merchant.id), method: :get %>
            <%= button_to "Enable", admin_merchant_path(dis_merchant.id), params: {status: 'Enabled'}, method: :patch %>
          </li>
        <% end %>
      </ul>
  </section>
<section id='top-merchants'>
  <h3>Top Five Merchants</h3>
  <% @merchants.top_five.each do |merchant| %>
    <ol>
      <li><%= link_to merchant.name, admin_merchant_path(merchant.id), method: :get %> - <%= number_to_currency(merchant.revenue) %> in sales</li>
    </ol>
  <% end %>
</section>
